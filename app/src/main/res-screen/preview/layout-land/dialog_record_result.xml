<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dialog_shape"
    android:layout_width="@dimen/preview_dialog_record_result_width"
    android:layout_height="@dimen/preview_dialog_record_result_height">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/preview_tab_height"
        android:layout_gravity="center"
        />

    <com.flipo.avivams.flipo.ui.CustomViewPager
        android:layout_marginTop="5dp"
        android:id="@+id/pages_container"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="5dp"
    />

</LinearLayout>