<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f7f7f7"
    android:elevation="40dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    tools:showIn="@layout/menu_topleft_bar">

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brush"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:drawableEnd="@android:drawable/ic_menu_edit"/>

    <Spinner
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown">

    </Spinner>

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:drawableEnd="@android:drawable/ic_menu_zoom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/skbar_brush_size"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_width="170dp"
            android:progress="@integer/default_brush_size"
            />

        <TextView
            android:id="@+id/txt_brush_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@integer/default_brush_size"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:textColor="#000000"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textColor="#000000" />

    <GridView
        android:id="@+id/menu_style_palette"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:numColumns="3"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth"
        android:gravity="center">
    </GridView>

</LinearLayout>