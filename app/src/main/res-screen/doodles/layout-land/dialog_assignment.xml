<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dialog_assignment_width"
    android:layout_height="@dimen/dialog_assignment_height"
    android:gravity="center"
    android:background="@drawable/dialog_shape"
    android:foreground="@drawable/dialog_border"
    android:weightSum="5">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/flipo_logo"
        android:layout_weight="3"
        android:layout_margin="30dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/dialog_half_bg"
        android:layout_margin="3dp"
       />


</LinearLayout>