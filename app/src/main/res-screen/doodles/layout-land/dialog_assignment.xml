<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dialog_assignment_width"
    android:layout_height="@dimen/dialog_assignment_height"
    android:gravity="center"
    android:background="@drawable/dialog_shape"
    android:foreground="@drawable/dialog_border">

    <ImageView
        android:id="@+id/title_image_assignment"
        android:layout_width="@dimen/assignment_title_image_width"
        android:layout_height="160dp"
        android:src="@drawable/task_title"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/dialog_half_bg"
        android:layout_margin="3dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_assignment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assignment_title"
                android:textSize="@dimen/assignment_title_txt_size"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textColor="@color/dialog_text_color" />

            <TextView
                android:id="@+id/txt_assignment_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assignment_description"
                android:textSize="@dimen/assignment_description_txt_size"
                android:paddingStart="5dp"
                android:fontFamily="sans-serif"
                android:textAlignment="textStart"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/dialog_text_color" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_assignment_ok"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/dialog_button"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/dialog_btn_text_color"
            android:text="@string/btn_thanks_gotit"
            android:textStyle="bold"
            android:textSize="@dimen/assignment_description_txt_size"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</LinearLayout>