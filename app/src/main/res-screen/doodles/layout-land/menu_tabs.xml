<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_drawing"
    android:alpha="0"
    >


    <Button
        android:id="@+id/btn_menu_title"
        android:layout_width="@dimen/menu_bar_tools_btn_width"
        android:layout_height="@dimen/menu_bar_tools_btn_height"
        android:background="@drawable/top_menu_bar_btn_style"
        android:layout_marginTop="5dp"
        android:text="Tools"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/menu_tab_title_icon"
        android:layout_gravity="start"
        android:gravity="start|center"
        android:textColor="#083971" />

    <FrameLayout
        android:id="@+id/menu_tab_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>