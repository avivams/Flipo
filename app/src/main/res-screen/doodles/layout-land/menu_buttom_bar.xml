<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:id="@+id/menu_main"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:background="@drawable/menu_main_rect"
    android:orientation="horizontal"
    android:elevation="40dp"
    android:weightSum="3"
    android:divider="@drawable/divider"
    android:showDividers="middle"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="select"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_zoom"
            android:drawablePadding="0dp"
            android:background="@drawable/menu_button_style"/>


        <Button
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="erase"
            android:id="@+id/btn_erase"
            android:layout_weight="1"
            android:drawablePadding="0dp"
            android:drawableTop="@android:drawable/ic_menu_delete"
            android:background="@drawable/menu_button_style"/>

        <Button
            android:id="@+id/btn_preview"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="preview"
            android:drawablePadding="0dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_media_play"
            android:background="@drawable/menu_button_style"/>

    </LinearLayout>

