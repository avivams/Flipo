<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dialog_prompt_width"
    android:layout_height="@dimen/dialog_prompt_height"
    android:gravity="center"
    android:background="@drawable/dialog_shape">

    <TextView
        android:id="@+id/txt_question"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "@string/quest_combine_exist_path"
        android:fontFamily="@font/comfortaa_bold"
        android:textSize="@dimen/dialog_prompt_txt_size"
        android:textColor="@color/dialog_result_text_color"
        android:gravity="center_horizontal"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="@dimen/dialog_confirm_btn_width"
            android:layout_height="@dimen/dialog_confirm_btn_height"
            android:background="@drawable/button_green_no_shadow"
            android:fontFamily="@font/big_john"
            android:text="@string/btn_yes"
            android:textColor="@color/dialog_btn_text_color"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="@dimen/dialog_btn_txt_size"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_no"
            android:layout_width="@dimen/dialog_confirm_btn_width"
            android:layout_height="@dimen/dialog_confirm_btn_height"
            android:background="@drawable/button_red_no_shadow"
            android:fontFamily="@font/big_john"
            android:text="@string/btn_no"
            android:textColor="@color/dialog_btn_text_color"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="@dimen/dialog_btn_txt_size"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>
